<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-gray-50 text-gray-800 font-sans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Back Button -->
        <div class="mb-4">
            <a href="/workouts" class="inline-flex items-center text-blue-600 hover:underline">
                Back to Workouts
            </a>
        </div>

        <!-- Exercise Details -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
                <h1 class="text-4xl font-extrabold text-blue-600 mb-4"><%= exercise.name %></h1>
                <p class="text-gray-700 mb-6 leading-relaxed">
                    <%= exercise.description ? exercise.description.replace(/<\/?[^>]+(>|$)/g, '') : 'No description available.' %>
                </p>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Category -->
                    <div>
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Category</h2>
                        <p class="text-gray-600">
                            <%= exercise.category && exercise.category.name ? exercise.category.name : 'Not specified' %>
                        </p>
                    </div>

                    <!-- Muscles -->
                    <div>
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Muscles Targeted</h2>
                        <p class="text-gray-600">
                            <%= exercise.muscles.length > 0
                                ? exercise.muscles.map(m => m.name).join(', ')
                                : 'No specific muscles targeted' %>
                        </p>
                    </div>

                    <!-- Equipment -->
                    <div>
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Equipment Needed</h2>
                        <p class="text-gray-600">
                            <%= exercise.equipment.length > 0
                                ? exercise.equipment.map(e => e.name).join(', ')
                                : 'Bodyweight/No equipment required' %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
